{% extends 'Front/front.html.twig' %}

{% block body %}
   <div id="main">
           <!-- Post -->
	 <section class="post">
		  <header class="major">
		     <span class="date">Join Us</span>
			   <h1>S'inscrire</h1>
		  </header>
    <div class="section-content">
       {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
   <form>       
    <div>
    <label for="nom">Nom:</label>
    {{ form_widget(form.nom) }}
    {{ form_errors(form.nom) }}
  </div>
  <div>
    <label for="prenom">Prénom:</label>
    {{ form_widget(form.prenom) }}
    {{ form_errors(form.prenom) }}
  </div>
    <div>
    <label for="username">Username:</label>
    {{ form_widget(form.username) }}
    {{ form_errors(form.username) }}
  </div>
  <div>
     <label for="email">Email:</label>
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
  </div>
  <div>
  <label for="password">Mot de passe :</label>
<input type="password" id="password" name="password" class="form-control">
{{ form_errors(form.password) }}
  </div>
  <div>
   <label for="num_tel">Numéro de téléphone :</label>
    {{ form_widget(form.num_tel) }}
    {{ form_errors(form.num_tel) }}
  </div>
  <div>
    <label for="CIN">Numéro de carte d'idenité :</label>
    {{ form_widget(form.CIN) }}
    {{ form_errors(form.CIN) }}
  </div>
  <div>
    <label for="image">Télécharger photo :</label>
    <input type="file" id="image" name="image" required>
  </div>
  <button type="submit">S'inscrire</button>
   </form>
  

  </section>
</div>
{% endblock %}