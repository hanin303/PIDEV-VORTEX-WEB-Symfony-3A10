{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<center>
    <h1>Reservation</h1>

    <table class="table"  style="border-collapse: collapse; width: 40%; border: 1px solid #ddd;">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date_reservation</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_depart</th>
                <td>{{ reservation.heureDepart }}</td>
            </tr>
            <tr>
                <th>Heure_arrive</th>
                <td>{{ reservation.heureArrive }}</td>
            </tr>
            
            <tr>
                <th>Type_ticket</th>
                <td>{{ reservation.typeTicket }}</td>
            </tr>
              <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

   {{ include('reservation/_delete_form.html.twig') }} 
